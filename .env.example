# Project Configuration | [TERRAFORM]
PROJECT_NAME=dms

# Server Configuration | [TERRAFORM: NODE_ENV]
NODE_ENV=development
PORT=3000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/dms
MONGODB_DB_NAME=dms

# AWS Endpoint Configuration (for LocalStack, delete if not needed)
AWS_ENDPOINT_URL=http://localhost:4566

# AWS Configuration | [TERRAFORM: AWS_REGION]
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS S3 Configuration | [TERRAFORM]
AWS_S3_BUCKET_NAME=dms-documents
AWS_S3_VERSIONING_ENABLED=true

# AWS Cognito Configuration | [TERRAFORM: AWS_COGNITO_USER_POOL_NAME, AWS_COGNITO_CLIENT_NAME]
AWS_COGNITO_USER_POOL_NAME=user-pool
AWS_COGNITO_CLIENT_NAME=web-client
# Cognito Outputs (set after terraform apply)
AWS_COGNITO_USER_POOL_ID=
AWS_COGNITO_CLIENT_ID=

# JWT Configuration (for local development without Cognito)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png,gif

# CORS | [TERRAFORM]
CORS_ORIGIN=http://localhost:3001
